
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Sign.cshtml";
}


<form class="login100-form validate-form" action="SignUp" method="post">
    @Html.AntiForgeryToken()
    <span class="login100-form-title p-b-34">
        Account Register<br /><br />
    </span>
    <span class="login50-form-title p-b-20 text-danger">@ViewBag.Message</span>
    <div class="wrap-input100 rs1-wrap-input200 validate-input m-b-20" data-validate="Type user name">
        <input id="first-name" class="input100" type="email" name="email" placeholder="Email">
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs1-wrap-input200 validate-input m-b-20" data-validate="Type user name">
        <input id="first-name" class="input100" type="text" name="userName" placeholder="User name">
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs1-wrap-input200 validate-input m-b-20" data-validate="Type user name">
        <input id="first-name" class="input100" type="text" name="address" placeholder="Address">
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs2-wrap-input200 validate-input m-b-20" data-validate="Type password">
        <input class="input100" type="text" name="phoneNumber" placeholder="Phone Number">
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type password">
        <input class="input100" type="password" name="password" placeholder="Password">
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
        <input class="input100" type="password" name="Repass" placeholder="Confirm Password">
        <span class="focus-input100"></span>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            Sign Up
        </button>
    </div>


    <div class="w-full p-t-100 text-center">
        <a href="/Home/Index" class="txt3 p-r-30">
            Back To Home
        </a>
        <a href="SignIn" class="txt3 p-l-30">
            Sign In
        </a>
    </div>

</form>