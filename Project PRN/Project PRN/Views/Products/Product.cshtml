
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script>
        var app1 = new Vue({
            el: '#categories',
            data: {
                categories: []
            },
            mounted: function () {
                axios.get('/Products/GetCategoriesJson')
                    .then(response => {
                        this.categories = response.data;
                        console.log(this.categories);
                    })
                    .catch(error => {
                        console.log(error);
                    })
            }
        })

        var app2 = new Vue({
            el: '#products',
            data: {
                products: [],
                totalPage: 0

            },
            mounted: function () {
                axios.get('/Products/ProductJson', {
                    params: {
                        categoryID: '@ViewData["categoryID"]',
                        page: '@ViewData["page"]',
                        searchKey: '@ViewData["searchKey"]',

                    }
                })
                    .then(response => {
                        this.products = response.data.productList;
                        this.totalPage = response.data.totalPage;
                        console.log(this.products);
                    })
                    .catch(error => {
                        console.log(error);
                    })
            },
            methods: {
                loadNewPage(index) {
                    axios.get('/Products/ProductJson', {
                        params: {
                            index: index
                        }
                    })
                        .then(response => {
                            this.products = response.data;
                            console.log(this.products);
                        })
                        .catch(error => {
                            console.log(error);
                        })
                },

                addToCart(productID) {
                    axios.get('/Carts/AddToCart', {
                        params: {
                            productID: productID,
                            quantity: 1,
                        }
                    })
                        .then(response => {
                            console.log(response.data)
                            if (response.data.type == 1) {
                                Swal.fire({
                                    position: 'Center',
                                    icon: 'success',
                                    title: response.data.message,
                                    showConfirmButton: false,
                                    timer: 1000
                                })
                            } else {
                                Swal.fire({
                                    position: 'Center',
                                    icon: 'error',
                                    title: 'Oops...',
                                    text: response.data.message,
                                })
                            }
                        })
                        .catch(error => {
                            console.log(error);
                        })
                }
            }
        })
    </script>
}

<div class="hero-wrap hero-bread" style="background-image: url('/Content/Design Images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-0 bread">PRODUCT</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <div id="products" class="col-md-8 col-lg-10 order-md-last">
                <form class="form-group d-flex" action="Product" method="get">
                    <input name="categoryID" id="categoryID" hidden type="hidden" class="form-control col-md-6" value="@ViewData["categoryID"]" />
                    <input name="searchKey" id="searchKey" type="text" class="form-control" placeholder="Search" />
                    <input name="page" id="page" hidden type="hidden" class="form-control" value="@ViewData["page"]" />
                    <input type="submit" class="btn btn-primary py-2 px-5 m-2" value="Search">
                </form>
                <div class="row">
                    <div v-for="p in products" class="col-sm-12 col-md-12 col-lg-4 d-flex">
                        <div class="product d-flex flex-column">
                            <a v-bind:href="'/Products/ProductDetail?productID=' + p.productID" class="img-prod">
                                <img class="img-fluid" v-bind:src="p.image"
                                     alt="Colorlib Template">
                                <div class="overlay"></div>
                            </a>
                            <div class="text py-3 pb-4 px-3">
                                <div class="d-flex">
                                    <div class="cat">
                                        <span>{{p.Category.categoriesName}}</span>
                                    </div>
                                    <div class="rating">
                                        <p class="text-right mb-0">
                                            <span v-for="i in p.rate" class="rate-active ion-ios-star-outline"></span>
                                            <span v-for="i in (5 - p.rate)" class="ion-ios-star-outline"></span>
                                        </p>
                                    </div>
                                </div>
                                <h3><a v-bind:href="'/Products/ProductDetail?productID=' + p.productID">{{p.title}}</a></h3>
                                <div class="pricing">
                                    <p class="price"><span>$ {{p.price}}</span></p>
                                </div>
                                <p class="bottom-area d-flex px-3">
                                    <button v-on:click="addToCart(p.productID)" class="add-to-cart text-center py-2 mr-1">
                                        <span>
                                            Add to cart <i class="ion-ios-add ml-1"></i>
                                        </span>
                                    </button>
                                    <button v-on:click="" href="#" class="buy-now text-center py-2">
                                        Buy now<span>
                                            <i class="ion-ios-cart ml-1"></i>
                                        </span>
                                    </button>
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
                <div v-if="totalPage > 0" class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                <li><a>&lt;&lt;</a></li>
                                @*<li class="active"><span>1</span></li>*@
                                @if (@ViewData["categoryID"] == null) {
                                    <li v-for="n in totalPage"><a v-bind:href="'/Products/Product?page='+n"><span>{{n}}</span></a></li>
                                } else {
                                    <li v-for="n in totalPage"><a v-bind:href="'/Products/Product?categoryID='+ @ViewData["categoryID"] +'&page='+n"><span>{{n}}</span></a></li>
                                }

                                <li><a>&gt;&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div id="categories" class="col-md-4 col-lg-2">
                <div class="sidebar">
                    <div class="sidebar-box-2">
                        <h2 class="heading">Categories</h2>
                        <div class="fancy-collapse-panel">
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                <ul>
                                    <!--v-for Category-->
                                    <a class="categories-active" href="/Products/Product" aria-expanded="true"
                                       aria-controls="collapseOne">
                                        ALL
                                    </a>
                                    <li v-for="category in categories">
                                        <div class="panel panel-default">
                                            <div class="panel-heading" role="tab" id="headingOne">
                                                <h4 class="panel-title">
                                                    <a class="categories-active" v-bind:href="'/Products/Product?categoryID=' + category.categoriesID" aria-expanded="true"
                                                       aria-controls="collapseOne">
                                                        {{category.categoriesName}}
                                                    </a>
                                                </h4>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
