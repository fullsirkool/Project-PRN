
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/axios.js"></script>
    <script>
        new Vue({
            el: '#product',
            data: {
                product: []
            },
            mounted: function () {
                axios.get('/Products/ProductDetailJson')
                    .then(response => {
                        this.categories = response.data;
                        console.log(this.categories);
                    })
                    .catch(error => {
                        console.log(error);
                    })
            }
        })
    </script>
}

<div class="hero-wrap hero-bread" style="background-image: url('/Content/Design Images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-0 bread">Bill Manager</h1>
                <p class="breadcrumbs">
                    <span class="mr-4"><a href="/Manager/ContactManager">Contact Manager</a></span>
                    <span class="mr-4"><a class="" href="/Manager/StaffBillManager">Bill Manager</a></span>
                    <span class="mr-4"><a class="link-active" href="">Upload Product</a></span>
                </p>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div id="product" class="row justify-content-center">
            <div class="col-xl-10">
                <form action="Edit" method="post" class="billing-form" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <h3 class="mb-4 billing-heading">Product Information</h3>
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstname">Title</label>
                                <input readonly type="text" name="title" class="form-control" v-bind:placeholder="product.title">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="lastname">Author</label>
                                <input readonly type="text" name="author" class="form-control" v-bind:placeholder="product.author">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="form-check">
                            <input v-if="product.status == 1" class="form-check-input" type="radio" name="flexRadioDefault" id="status" checked value="1">
                            <input v-else class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Instock
                            </label>
                        </div>
                        <div class="form-check">
                            <input v-if="product.status == 0" class="form-check-input" type="radio" name="flexRadioDefault" id="status" checked value="0">
                            <input v-else class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                            <label class="form-check-label" for="flexRadioDefault2">
                                Outstock
                            </label>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="postcodezip">Price</label>
                                <input type="number" name="price" class="form-control" v-bind:placeholder="product.price">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="postcodezip">Quantity</label>
                                <input type="number" name="quantity" class="form-control" v-bind:placeholder="product.quantity">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="phone">ShortDescription</label>
                                <textarea class="form-control" name="shortDescription" rows="5" v-bind:placeholder="product.shortDescription"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="emailaddress">Description</label>
                                <textarea class="form-control" name="description" rows="7" v-bind:placeholder="product.description"></textarea>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <input class="btn btn-primary py-3 px-4" type="submit" value="Upload" />
                    </div>
                </form><!-- END -->


            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
